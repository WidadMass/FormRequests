{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*.ts"], // Inclut tous les fichiers TypeScript dans src/
    "exclude": ["node_modules", "dist"]
  }
  